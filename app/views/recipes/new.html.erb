<h3>Create a new recipe</h3>
<%= form_with model: @recipe, url: recipes_path, method: :post, local: true do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :required => "required", autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :preparation_time %><br />
    <%= f.number_field :preparation_time, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :cooking_time %><br />
    <%= f.number_field :cooking_time, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :public %><br />
    <%= f.check_box :public, default:false %>
  </div>
  <div class="actions">
    <%= f.submit "Create Recipe", class: 'btn-primary' %>
  </div>
<% end %>

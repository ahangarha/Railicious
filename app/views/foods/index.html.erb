<div class="flex items-start w-full">
  <h1 class="grow">List of existing food items</h1>
  <%= link_to "New", new_food_path, class: 'btn-primary' %>
</div>

<% if @foods.blank? %>
  No food found.
  <% return %>
<% end %>

<table>
  <thead>
    <th>Food</th>
    <th>Unit</th>
    <th>Price</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td>
        <% if user_signed_in? && food.user == current_user %>
        <%= form_for( food, method: :delete) do |f| %>
          <%= f.submit 'delete', class: 'cursor-pointer text-red-500' %>
        <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
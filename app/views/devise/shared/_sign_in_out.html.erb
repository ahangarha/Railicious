<% if user_signed_in? %>
  <%= form_with(model: current_user, url: destroy_user_session_path, method: :delete, class: 'w-full') do |f| %>
    <%= f.submit 'Log out', class: 'block px-4 py-2 hover:bg-white/10 w-full text-left cursor-pointer' %>
  <% end %>
<% else %>
  <%= link_to "Log in", new_user_session_path, class: 'block px-4 py-2 hover:bg-white/10' %>
<% end %>
